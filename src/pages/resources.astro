    resources: [
      { name: "Linux Journey", url: "https://linuxjourney.com", type: "Tutorial", free: true },
      { name: "Docker Curriculum", url: "https://docker-curriculum.com", type: "Tutorial", free: true },
      { name: "Kubernetes Basics", url: "https://kubernetes.io/docs/tutorials/", type: "Documentation", free: true },
      { name: "AWS Free Tier", url: "https://aws.amazon.com/free/", type: "Platform", free: true },
      { name: "DevOps Roadmap", url: "https://roadmap.sh/devops", type: "Roadmap", free: true },
