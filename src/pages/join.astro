---
/**
 * /join - Join DevUp Society Page with JoinAction Schema
 * 
 * SEO Optimizations:
 * - JoinAction schema for community joining
 * - ContactPage schema for newsletter signup
 * - AEO content for "how to join DevUp" queries
 * 
 * TARGET KEYWORDS:
 * - join DevUp Society
 * - how to join DevUp
 * - DevUp Society membership
 * - student developer community join
 * - VJIT coding club registration
 */
import MainLayout from '../layouts/MainLayout.astro';

// JoinAction schema for community
const joinActionSchema = {
  "@context": "https://schema.org",
  "@type": "JoinAction",
  "name": "Join DevUp Society Community",
  "description": "Join the WhatsApp community of DevUp Society to connect with student developers, get updates on events, and participate in discussions.",
  "target": {
    "@type": "EntryPoint",
    "urlTemplate": "https://chat.whatsapp.com/CvU68WlMmoo5PvIBpOU5Dy",
    "actionPlatform": [
      "https://schema.org/DesktopWebPlatform",
      "https://schema.org/MobileWebPlatform",
      "https://schema.org/AndroidPlatform",
      "https://schema.org/IOSPlatform"
    ]
  },
  "agent": {
    "@type": "Organization",
    "name": "DevUp Society",
    "url": "https://www.devupvjit.in"
  },
  "result": {
    "@type": "OrganizationMembership",
    "programName": "DevUp Society Community Membership",
    "membershipLevel": "Community Member"
  }
};

// ContactPage schema
const contactPageSchema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Join DevUp Society",
  "description": "Join DevUp Society's WhatsApp community and newsletter to stay updated on hackathons, workshops, and recruitment.",
  "url": "https://www.devupvjit.in/join",
  "mainEntity": {
    "@type": "Organization",
    "name": "DevUp Society",
    "email": "devupsociety@vjit.ac.in",
    "url": "https://www.devupvjit.in"
  }
};

// Breadcrumb
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://www.devupvjit.in" },
    { "@type": "ListItem", "position": 2, "name": "Join", "item": "https://www.devupvjit.in/join" }
  ]
};
---

<MainLayout 
  title="Join DevUp Society - Free Student Developer Community Membership"
  description="Join India's premier student developer community. Connect with 100+ developers, get hackathon updates, and access free workshops. Join our WhatsApp community now - no fees required."
  keywords="join DevUp Society, how to join DevUp, DevUp Society membership, student developer community join, VJIT coding club registration, DevUp WhatsApp community"
  schema={[joinActionSchema, contactPageSchema, breadcrumbSchema]}
>
  <!-- HERO SECTION -->
  <section class="relative min-h-screen w-full flex flex-col justify-center items-center overflow-hidden pt-32">
    <div class="grid-floor opacity-30"></div>
    
    <div class="relative z-20 text-center px-4 max-w-3xl mx-auto">
      <!-- Status Badge -->
      <div class="mb-8 inline-flex items-center gap-2 bg-zinc-900/50 border border-zinc-800 px-6 py-3 font-mono text-xs tracking-widest uppercase">
        <span class="w-2 h-2 bg-zinc-500 rounded-full animate-pulse"></span>
        <span class="text-zinc-400">Recruitment Closed</span>
      </div>

      <!-- Title -->
      <h1 class="font-display text-5xl md:text-8xl text-white font-medium leading-[0.9] tracking-tight mb-8">
        WE'RE NOT<br/>
        <span class="text-stroke-white">RECRUITING</span><br/>
        <span class="text-signal">RIGHT NOW</span>
      </h1>

      <!-- Description -->
      <p class="font-mono text-sm text-zinc-400 leading-relaxed mb-12 max-w-xl mx-auto">
        Our recruitment cycle isn't active at the moment, but we'd love to stay connected! 
        Join our WhatsApp community and subscribe to our newsletter to stay updated on future opportunities, events, and tech talks.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        <!-- WhatsApp Community -->
        <a 
          href="https://chat.whatsapp.com/CvU68WlMmoo5PvIBpOU5Dy"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-signal text-black font-mono text-xs font-bold tracking-widest uppercase hover:bg-white transition-colors clip-corner btn-glitch"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="relative z-10"><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/></svg>
          <span class="relative z-10">Join WhatsApp Community</span>
        </a>

        <!-- Newsletter Scroll -->
        <button 
          onclick="document.getElementById('newsletter-section').scrollIntoView({ behavior: 'smooth' })"
          class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-zinc-900 text-white font-mono text-xs font-bold tracking-widest uppercase hover:bg-zinc-800 transition-colors border border-zinc-700 hover:border-signal"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          <span>Subscribe to Newsletter</span>
        </button>
      </div>

      <!-- Info Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-16">
        <div class="glass-panel p-6 clip-corner-tl text-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-signal mb-4 inline-block"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>
          <h3 class="font-display text-lg text-white mb-2">Stay Updated</h3>
          <p class="font-mono text-xs text-zinc-500">Get notified when recruitment opens</p>
        </div>
        <div class="glass-panel p-6 clip-corner-tl text-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-signal mb-4 inline-block"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          <h3 class="font-display text-lg text-white mb-2">Join Community</h3>
          <p class="font-mono text-xs text-zinc-500">Connect with tech enthusiasts</p>
        </div>
        <div class="glass-panel p-6 clip-corner-tl text-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-signal mb-4 inline-block"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
          <h3 class="font-display text-lg text-white mb-2">Attend Events</h3>
          <p class="font-mono text-xs text-zinc-500">Participate in workshops & hackathons</p>
        </div>
      </div>
    </div>
  </section>

  <!-- NEWSLETTER SECTION -->
  <section id="newsletter-section" class="py-32 bg-[#050505] border-t border-zinc-900">
    <div class="max-w-2xl mx-auto px-6">
      <div class="glass-panel p-12 clip-corner">
        <div class="text-center mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-signal mb-4 inline-block"><path d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"/><path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"/></svg>
          <h2 class="font-display text-4xl text-white mb-4">Subscribe to Our Newsletter</h2>
          <p class="font-mono text-sm text-zinc-400">
            Get the latest updates on events, workshops, and recruitment openings delivered to your inbox.
          </p>
        </div>

        <!-- Newsletter Form -->
        <form class="space-y-6" id="newsletter-form">
          <div>
            <label for="email" class="block font-mono text-xs text-zinc-500 uppercase tracking-widest mb-2">
              Email Address
            </label>
            <input 
              type="email" 
              id="email" 
              name="email"
              required
              placeholder="your.email@example.com"
              class="w-full bg-zinc-900 border border-zinc-800 px-4 py-3 font-mono text-sm text-white placeholder-zinc-600 focus:border-signal focus:outline-none transition-colors"
            />
          </div>

          <div>
            <label for="name" class="block font-mono text-xs text-zinc-500 uppercase tracking-widest mb-2">
              Name (Optional)
            </label>
            <input 
              type="text" 
              id="name" 
              name="name"
              placeholder="Your Name"
              class="w-full bg-zinc-900 border border-zinc-800 px-4 py-3 font-mono text-sm text-white placeholder-zinc-600 focus:border-signal focus:outline-none transition-colors"
            />
          </div>

          <button 
            type="submit"
            class="w-full bg-signal text-black font-mono text-xs font-bold tracking-widest uppercase py-4 px-6 hover:bg-white transition-colors clip-corner btn-glitch"
          >
            <span class="relative z-10">Subscribe Now</span>
          </button>

          <p class="text-center font-mono text-xs text-zinc-600">
            We respect your privacy. Unsubscribe anytime.
          </p>
          
          <div class="pt-6 border-t border-zinc-900 mt-6 text-center">
            <p class="font-mono text-[10px] text-zinc-500 uppercase tracking-widest mb-2">Have questions?</p>
            <a href="mailto:devupsociety@vjit.ac.in" class="text-signal hover:text-white transition-colors font-mono text-xs">devupsociety@vjit.ac.in</a>
          </div>
        </form>

        <!-- Success Message (Hidden by default) -->
        <div id="success-message" class="hidden mt-6 p-4 bg-signal/10 border border-signal text-center">
          <p class="font-mono text-sm text-signal">
            âœ“ Successfully subscribed! Check your email for confirmation.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- STAY CONNECTED SECTION -->
  <section class="py-32 bg-void border-t border-zinc-900">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// Stay Connected</span>
        <h2 class="font-display text-5xl text-white font-medium leading-[0.9] mb-6">
          JOIN OUR COMMUNITY
        </h2>
        <p class="font-mono text-sm text-zinc-400 max-w-2xl mx-auto">
          While you wait for recruitment to open, join our active WhatsApp community to network, 
          collaborate, and stay updated with everything DevUp Society.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- WhatsApp Card -->
        <div class="glass-panel p-8 clip-corner-tl hover:border-signal/30 transition-all">
          <div class="flex items-start gap-4">
            <div class="w-16 h-16 bg-signal/10 border border-signal flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-signal"><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/></svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-2xl text-white mb-2">WhatsApp Community</h3>
              <p class="font-mono text-xs text-zinc-400 mb-6">
                Join 100+ tech enthusiasts, get instant updates, and participate in discussions.
              </p>
              <a 
                href="https://chat.whatsapp.com/CvU68WlMmoo5PvIBpOU5Dy"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-signal font-mono text-xs uppercase tracking-widest hover:text-white transition-colors"
              >
                <span>Join Now</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Events Card -->
        <div class="glass-panel p-8 clip-corner-tl hover:border-signal/30 transition-all">
          <div class="flex items-start gap-4">
            <div class="w-16 h-16 bg-signal/10 border border-signal flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-signal"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-2xl text-white mb-2">Explore Events</h3>
              <p class="font-mono text-xs text-zinc-400 mb-6">
                Check out our past and upcoming workshops, hackathons, and tech talks.
              </p>
              <a 
                href="/events"
                class="inline-flex items-center gap-2 text-signal font-mono text-xs uppercase tracking-widest hover:text-white transition-colors"
              >
                <span>View Events</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script is:inline>
    // Newsletter form submission
    const form = document.getElementById('newsletter-form');
    const successMessage = document.getElementById('success-message');
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const email = document.getElementById('email').value;
        const name = document.getElementById('name').value;
        
        // TODO: Replace with your actual newsletter API endpoint
        // For now, just show success message
        console.log('Newsletter signup:', { email, name });
        
        // Show success message
        form.classList.add('hidden');
        successMessage.classList.remove('hidden');
        
        // Reset form after 3 seconds
        setTimeout(() => {
          form.reset();
          form.classList.remove('hidden');
          successMessage.classList.add('hidden');
        }, 3000);
      });
    }
  </script>
</MainLayout>
