---
// /events/[slug].astro - Dynamic event detail pages
import MainLayout from '../../layouts/MainLayout.astro';
import { events } from '../../data/events';

// Generate static paths for all events
export async function getStaticPaths() {
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;

// Format date helper
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}
---

<MainLayout 
  title={`${event.title} | DevUp Society`}
  description={event.shortDescription}
>
  <!-- HERO SECTION -->
  <section class="relative min-h-[60vh] w-full flex flex-col justify-center items-center overflow-hidden border-b border-zinc-900 py-32">
    <div class="grid-floor opacity-30"></div>
    
    <!-- Back Button -->
    <a 
      href="/events"
      class="absolute top-32 left-6 z-30 inline-flex items-center gap-2 text-zinc-400 hover:text-signal font-mono text-xs uppercase tracking-widest transition-colors"
    >
      <iconify-icon icon="lucide:arrow-left"></iconify-icon>
      <span>Back to Events</span>
    </a>
    
    <div class="relative z-20 text-center px-4 max-w-4xl mx-auto">
      <!-- Status Badge -->
      <div class="mb-6">
        <span class={`font-mono text-xs px-4 py-2 uppercase tracking-widest ${
          event.status === 'upcoming' 
            ? 'bg-signal/20 text-signal' 
            : 'bg-zinc-800 text-zinc-500'
        }`}>
          {event.status === 'upcoming' ? 'Upcoming Event' : 'Past Event'}
        </span>
      </div>

      <!-- Title -->
      <h1 class="font-display text-4xl md:text-7xl text-white font-medium leading-[0.9] tracking-tight mb-8">
        {event.title}
      </h1>

      <!-- Event Meta Info -->
      <div class="flex flex-wrap justify-center gap-6 font-mono text-xs text-zinc-400">
        <div class="flex items-center gap-2">
          <iconify-icon icon="lucide:calendar" class="text-signal"></iconify-icon>
          <span>{formatDate(event.date)}</span>
        </div>
        <div class="flex items-center gap-2">
          <iconify-icon icon="lucide:map-pin" class="text-signal"></iconify-icon>
          <span>{event.location}</span>
        </div>
        <div class="flex items-center gap-2">
          <iconify-icon icon={event.mode === 'Online' ? 'lucide:monitor' : event.mode === 'Offline' ? 'lucide:map-pin' : 'lucide:globe'} class="text-signal"></iconify-icon>
          <span>{event.mode}</span>
        </div>
      </div>

      <!-- Tags -->
      <div class="flex flex-wrap justify-center gap-2 mt-8">
        {event.tags.map(tag => (
          <span class="font-mono text-xs bg-zinc-900 text-zinc-400 px-3 py-1 border border-zinc-800">
            {tag}
          </span>
        ))}
      </div>

      <!-- Registration Button -->
      {event.status === 'upcoming' && event.registrationLink && (
        <div class="mt-10">
          <a 
            href={event.registrationLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-8 py-4 bg-signal text-black font-mono text-xs font-bold tracking-widest uppercase hover:bg-white transition-colors clip-corner btn-glitch"
          >
            <span class="relative z-10">Register Now</span>
            <iconify-icon icon="lucide:arrow-right" class="relative z-10"></iconify-icon>
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- IMAGE CAROUSEL -->
  {event.images.length > 0 && (
    <section class="py-32 bg-void">
      <div class="max-w-5xl mx-auto px-6">
        <div class="mb-12 text-center">
          <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// Gallery</span>
          <h2 class="font-display text-5xl text-white font-medium leading-[0.9]">
            EVENT HIGHLIGHTS
          </h2>
        </div>
        
        <div class="relative">
          <!-- Carousel Container -->
          <div class="relative overflow-hidden aspect-video bg-zinc-900 border border-zinc-800" id="event-carousel">
            <!-- Images -->
            {event.images.map((imageUrl, index) => (
              <div 
                class={`carousel-slide absolute inset-0 transition-opacity duration-500 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
                data-slide={index}
              >
                <img 
                  src={imageUrl}
                  alt={`${event.title} - Image ${index + 1}`}
                  loading={index === 0 ? 'eager' : 'lazy'}
                  class="w-full h-full object-cover"
                />
              </div>
            ))}
            
            <!-- Navigation Arrows -->
            {event.images.length > 1 && (
              <>
                <button 
                  id="carousel-prev"
                  class="absolute left-4 top-1/2 -translate-y-1/2 z-20 w-12 h-12 bg-black/50 hover:bg-signal/20 border border-zinc-700 hover:border-signal flex items-center justify-center transition-all group"
                  aria-label="Previous image"
                >
                  <iconify-icon icon="lucide:chevron-left" class="text-white group-hover:text-signal text-2xl"></iconify-icon>
                </button>
                <button 
                  id="carousel-next"
                  class="absolute right-4 top-1/2 -translate-y-1/2 z-20 w-12 h-12 bg-black/50 hover:bg-signal/20 border border-zinc-700 hover:border-signal flex items-center justify-center transition-all group"
                  aria-label="Next image"
                >
                  <iconify-icon icon="lucide:chevron-right" class="text-white group-hover:text-signal text-2xl"></iconify-icon>
                </button>
              </>
            )}
            
            <!-- Image Counter -->
            <div class="absolute bottom-4 left-4 z-20 bg-black/70 backdrop-blur-sm px-4 py-2 border border-zinc-800">
              <span id="carousel-counter" class="font-mono text-xs text-white">1 / {event.images.length}</span>
            </div>
          </div>
          
          <!-- Dots Indicators -->
          {event.images.length > 1 && (
            <div class="flex justify-center gap-2 mt-8">
              {event.images.map((_, index) => (
                <button
                  class={`carousel-dot w-3 h-3 border border-zinc-700 transition-all ${index === 0 ? 'bg-signal border-signal' : 'bg-transparent hover:border-signal'}`}
                  data-slide={index}
                  aria-label={`Go to image ${index + 1}`}
                >
                </button>
              ))}
            </div>
          )}
        </div>
      </div>
    </section>
    
    <script is:inline>
      // Carousel functionality
      if (document.getElementById('event-carousel')) {
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-slide');
        const dots = document.querySelectorAll('.carousel-dot');
        const counter = document.getElementById('carousel-counter');
        const totalSlides = slides.length;
        
        function showSlide(index) {
          // Hide all slides
          slides.forEach((slide, i) => {
            if (i === index) {
              slide.classList.add('opacity-100', 'z-10');
              slide.classList.remove('opacity-0', 'z-0');
            } else {
              slide.classList.add('opacity-0', 'z-0');
              slide.classList.remove('opacity-100', 'z-10');
            }
          });
          
          // Update dots
          dots.forEach((dot, i) => {
            if (i === index) {
              dot.classList.add('bg-signal', 'border-signal');
              dot.classList.remove('bg-transparent');
            } else {
              dot.classList.remove('bg-signal', 'border-signal');
              dot.classList.add('bg-transparent');
            }
          });
          
          // Update counter
          if (counter) {
            counter.textContent = `${index + 1} / ${totalSlides}`;
          }
          
          currentSlide = index;
        }
        
        function nextSlide() {
          const next = (currentSlide + 1) % totalSlides;
          showSlide(next);
        }
        
        function prevSlide() {
          const prev = (currentSlide - 1 + totalSlides) % totalSlides;
          showSlide(prev);
        }
        
        // Navigation buttons
        const nextBtn = document.getElementById('carousel-next');
        const prevBtn = document.getElementById('carousel-prev');
        
        if (nextBtn) nextBtn.addEventListener('click', nextSlide);
        if (prevBtn) prevBtn.addEventListener('click', prevSlide);
        
        // Dot navigation
        dots.forEach((dot, index) => {
          dot.addEventListener('click', () => showSlide(index));
        });
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') prevSlide();
          if (e.key === 'ArrowRight') nextSlide();
        });
        
        // Auto-play (optional, uncomment to enable)
        // setInterval(nextSlide, 5000);
      }
    </script>
  )}

  <!-- DESCRIPTION -->
  <section class="py-32 bg-[#050505] border-t border-zinc-900">
    <div class="max-w-4xl mx-auto px-6">
      <div class="mb-12">
        <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// Details</span>
        <h2 class="font-display text-5xl text-white font-medium leading-[0.9] mb-8">
          ABOUT THIS EVENT
        </h2>
      </div>

      <div class="glass-panel p-10 clip-corner">
        <p class="font-mono text-sm text-zinc-300 leading-relaxed whitespace-pre-line">
          {event.fullDescription}
        </p>
      </div>
    </div>
  </section>

  <!-- SPEAKERS -->
  {event.speakers.length > 0 && (
    <section class="py-32 bg-void border-t border-zinc-900">
      <div class="max-w-5xl mx-auto px-6">
        <div class="mb-20">
          <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// Speakers</span>
          <h2 class="font-display text-5xl text-white font-medium leading-[0.9]">
            MEET THE SPEAKERS
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {event.speakers.map((speaker) => (
            <div class="glass-panel p-8 clip-corner-tl hover:border-signal/30 transition-all flex items-start gap-6">
              <!-- Speaker Avatar -->
              <div class="w-20 h-20 bg-zinc-900 border-2 border-zinc-800 flex items-center justify-center shrink-0">
                <iconify-icon icon="lucide:user" class="text-3xl text-signal"></iconify-icon>
              </div>

              <!-- Speaker Info -->
              <div class="flex-1">
                <h3 class="font-display text-2xl text-white mb-2">
                  {speaker.name}
                </h3>
                <p class="font-mono text-xs text-signal uppercase tracking-widest mb-1">
                  {speaker.designation}
                </p>
                {speaker.company && (
                  <p class="font-mono text-xs text-zinc-500">
                    {speaker.company}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- QUICK SUMMARY BOX -->
  <section class="py-32 bg-[#050505] border-t border-zinc-900">
    <div class="max-w-4xl mx-auto px-6">
      <div class="glass-panel p-10 clip-corner border-l-4 border-signal">
        <h3 class="font-display text-2xl text-white mb-4">Quick Summary</h3>
        <p class="font-mono text-sm text-zinc-400 leading-relaxed">
          {event.shortDescription}
        </p>
      </div>
    </div>
  </section>

  <!-- CTA BACK TO EVENTS -->
  <section class="py-32 bg-void border-t border-zinc-900">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <div class="glass-panel p-12 clip-corner">
        <iconify-icon icon="lucide:calendar" class="text-signal text-6xl mb-6"></iconify-icon>
        <h2 class="font-display text-4xl text-white mb-6 leading-tight">
          Explore More Events
        </h2>
        <p class="font-mono text-zinc-400 text-sm mb-8 max-w-lg mx-auto">
          Check out our other workshops, hackathons, and tech talks.
        </p>
        <a 
          href="/events" 
          class="inline-flex items-center gap-3 px-8 py-4 bg-signal text-black font-mono text-xs font-bold tracking-widest uppercase hover:bg-white transition-colors clip-corner btn-glitch"
        >
          <span class="relative z-10">View All Events</span>
          <iconify-icon icon="lucide:arrow-right" class="relative z-10"></iconify-icon>
        </a>
      </div>
    </div>
  </section>
</MainLayout>
