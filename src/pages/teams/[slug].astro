---
// /teams/[slug].astro - Dynamic team pages
// Routes: /teams/tech, /teams/marketing, etc.

import MainLayout from '../../layouts/MainLayout.astro';
import { teamMembers } from '../../data/team';

// Generate static paths for all unique team slugs
export async function getStaticPaths() {
  // Get all unique team slugs
  const uniqueSlugs = [...new Set(teamMembers.map(m => m.teamSlug))];
  
  return uniqueSlugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;

// Check if team exists
const teamExists = teamMembers.some((member) => member.teamSlug === slug);

// Get team name
const teamName = teamMembers.find((m) => m.teamSlug === slug)?.teamName || 'Team';

// Filter core members (leads) for this team
const coreMembers = teamMembers.filter(
  (member) => member.teamSlug === slug && member.teamType === "core"
);

// Filter regular team members
const members = teamMembers.filter(
  (member) => member.teamSlug === slug && member.teamType === "member"
);
---

{!teamExists ? (
  <MainLayout title="Team Not Found | DevUp Society" description="Team not found">
    <section class="py-32 bg-void">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-700 mb-6"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="12"/><line x1="12" x2="12.01" y1="16" y2="16"/></svg>
        <h1 class="font-display text-5xl text-white mb-4">Team Not Found</h1>
        <p class="font-mono text-zinc-400 text-sm mb-8">
          The team you're looking for doesn't exist.
        </p>
        <a 
          href="/team"
          class="inline-flex items-center gap-3 px-8 py-4 bg-signal text-black font-mono text-xs font-bold tracking-widest uppercase hover:bg-white transition-colors clip-corner"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
          <span>Back to Team</span>
        </a>
      </div>
    </section>
  </MainLayout>
) : (
  <MainLayout 
    title={`${teamName} | DevUp Society`}
    description={`Meet the ${teamName} members of DevUp Society`}
  >
    <!-- HERO SECTION -->
    <section class="relative h-[60vh] w-full flex flex-col justify-center items-center overflow-hidden border-b border-zinc-900">
      <div class="grid-floor opacity-30"></div>
      
      <!-- Back Button (Absolute) -->
      <a 
        href="/team"
        class="absolute top-32 left-6 z-30 inline-flex items-center gap-2 text-zinc-400 hover:text-signal font-mono text-xs uppercase tracking-widest transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
        <span>Back to Team</span>
      </a>
      
      <div class="relative z-20 text-center px-4">
        <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// {teamName}</span>
        <h1 class="font-display text-6xl md:text-9xl text-white font-medium leading-[0.85] tracking-tight mb-6">
          {teamName.split(' ')[0]}<br/>
          <span class="text-zinc-700">{teamName.split(' ').slice(1).join(' ')}</span>
        </h1>
        <p class="font-mono text-zinc-400 text-sm max-w-2xl mx-auto">
          Meet the members of our {teamName.toLowerCase()}
        </p>
      </div>
    </section>

    <!-- TEAM LEAD SECTION (if any) -->
    {coreMembers.length > 0 && (
      <section class="py-32 bg-void border-b border-zinc-900">
        <div class="max-w-7xl mx-auto px-6">
          <div class="mb-20">
            <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// Leadership</span>
            <h2 class="font-display text-5xl text-white font-medium leading-[0.9]">
              TEAM LEAD
            </h2>
          </div>

          {/* LEAD CENTERED */}
          <div class="max-w-md mx-auto">
            {coreMembers.map((member) => (
              <div class="group relative">
                <div class="glass-panel p-10 clip-corner-tl hover:border-signal/30 transition-all h-full flex flex-col">
                  <!-- Photo -->
                  <div class="w-40 h-40 mb-6 border-2 border-zinc-800 group-hover:border-signal transition-colors overflow-hidden mx-auto">
                    {member.photo ? (
                      <img src={member.photo} alt={member.name} class="w-full h-full object-cover md:grayscale md:group-hover:grayscale-0 transition-all" />
                    ) : (
                      <div class="w-full h-full bg-zinc-900 flex items-center justify-center">
                        <span class="text-signal font-mono text-2xl font-bold">
                          {member.name.split(' ').map(n => n[0]).join('')}
                        </span>
                      </div>
                    )}
                  </div>
                  
                  <!-- Info -->
                  <div class="text-center mb-6">
                    <h3 class="font-display text-2xl text-white mb-3 group-hover:text-signal transition-colors">
                      {member.name}
                    </h3>
                    <p class="font-mono text-sm text-signal uppercase tracking-widest mb-2">
                      {member.role}
                    </p>
                    <p class="font-mono text-xs text-zinc-500 mb-4">
                      {member.year}
                    </p>
                  </div>

                  {/* Quote */}
                  {member.quote && (
                    <p class="font-mono text-xs text-zinc-400 leading-relaxed text-center flex-1 border-t border-zinc-800 pt-6">
                      "{member.quote}"
                    </p>
                  )}

                  <!-- Social Links -->
                  {member.socialLinks && Object.keys(member.socialLinks).length > 0 && (
                    <div class="flex gap-4 justify-center pt-6 border-t border-zinc-800 mt-6">
                      {member.socialLinks.linkedin && (
                        <a href={member.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
                      </a>
                      )}
                      {member.socialLinks.github && (
                        <a href={member.socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                      </a>
                      )}
                      {member.socialLinks.instagram && (
                        <a href={member.socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
                      </a>
                      )}
                      {member.socialLinks.twitter && (
                        <a href={member.socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>
                      </a>
                      )}
                      {member.socialLinks.portfolio && (
                        <a href={member.socialLinks.portfolio} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
                      </a>
                      )}
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- TEAM MEMBERS SECTION -->
    <section class="py-32 bg-[#050505]">
      <div class="max-w-7xl mx-auto px-6">
        <div class="mb-20">
          <span class="text-signal font-mono text-xs tracking-widest uppercase mb-4 block">/// Team</span>
          <h2 class="font-display text-5xl text-white font-medium leading-[0.9]">
            TEAM MEMBERS
          </h2>
        </div>

        {members.length > 0 ? (
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {members.map((member, index) => (
              <div class={`group relative ${index % 2 === 1 ? 'md:mt-8' : ''}`}>
                <div class="glass-panel p-6 clip-corner-tl hover:border-signal/30 transition-all h-full flex flex-col">
                  <!-- Photo -->
                  <div class="w-24 h-24 mb-4 border-2 border-zinc-800 group-hover:border-signal transition-colors overflow-hidden mx-auto">
                    {member.photo ? (
                      <img src={member.photo} alt={member.name} class="w-full h-full object-cover md:grayscale md:group-hover:grayscale-0 transition-all" />
                    ) : (
                      <div class="w-full h-full bg-zinc-900 flex items-center justify-center">
                        <span class="text-signal font-mono text-lg font-bold">
                          {member.name.split(' ').map(n => n[0]).join('')}
                        </span>
                      </div>
                    )}
                  </div>
                  
                  <!-- Info -->
                  <div class="text-center flex-1">
                    <h3 class="font-display text-lg text-white mb-1 group-hover:text-signal transition-colors">
                      {member.name}
                    </h3>
                    <p class="font-mono text-xs text-zinc-400 mb-1">
                      {member.role}
                    </p>
                    <p class="font-mono text-xs text-zinc-500 mb-4">
                      {member.year}
                    </p>
                    {member.quote && (
                      <p class="font-mono text-xs text-zinc-600 leading-relaxed italic">
                        "{member.quote}"
                      </p>
                    )}
                  </div>

                  <!-- Social Links -->
                  {member.socialLinks && Object.keys(member.socialLinks).length > 0 && (
                    <div class="flex gap-3 justify-center pt-4 border-t border-zinc-800 mt-4">
                      {member.socialLinks.linkedin && (
                        <a href={member.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
                      </a>
                      )}
                      {member.socialLinks.github && (
                        <a href={member.socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                      </a>
                      )}
                      {member.socialLinks.instagram && (
                        <a href={member.socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
                      </a>
                      )}
                      {member.socialLinks.twitter && (
                        <a href={member.socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>
                      </a>
                      )}
                      {member.socialLinks.portfolio && (
                        <a href={member.socialLinks.portfolio} target="_blank" rel="noopener noreferrer" class="text-zinc-600 hover:text-signal transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
                      </a>
                      )}
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="glass-panel p-12 clip-corner text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-700 mb-4"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            <p class="font-mono text-zinc-500 text-sm">
              Team members will be added soon.
            </p>
          </div>
        )}
      </div>
    </section>
  </MainLayout>
)}
