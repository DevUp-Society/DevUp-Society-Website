          const track = document.getElementById('pillars-track');
          const pin = document.getElementById('pillars-pin');
          
          if(track && pin) {
            // Calculate total scroll distance
            let scrollWidth = track.scrollWidth - window.innerWidth;
            
            // Create the horizontal scroll tween
            gsap.to(track, {
              x: -scrollWidth,
              ease: "none",
              scrollTrigger: {
                trigger: pin,
                pin: true,
                scrub: 1, // Smooth scrubbing taking 1 second to catch up
                // The pinning acts as a virtual vertical space based on horizontal length
                end: () => "+=" + track.scrollWidth,
                invalidateOnRefresh: true
              }
            });

            // Optional: Subtle parallax/tilt on the panels as they scroll
            gsap.utils.toArray('.pillar-panel').forEach((panel) => {
               gsap.to(panel, {
                  rotateY: 2,
                  rotateX: 2,
                  ease: "none",
                  scrollTrigger: {
                     trigger: pin,
