    <div class="absolute top-1/4 left-10 w-72 h-72 bg-signal/5 rounded-full blur-[100px] animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-10 w-96 h-96 bg-purple-500/5 rounded-full blur-[120px] animate-pulse-slow" style="animation-delay: 2s"></div>
  </div>

<script>
  // Wait for GSAP and TextPlugin
  window.addEventListener('load', () => {
    // Slight delay to sync with loader exit
    setTimeout(() => {
        const targets = document.querySelectorAll('.scramble-target');
        
        targets.forEach((target) => {
          // @ts-ignore
          if (typeof gsap !== 'undefined') {
            const originalText = target.getAttribute('data-original');
            
            // Re-assert text just in case
            target.textContent = originalText;

            // @ts-ignore
            gsap.to(target, {
              duration: 1.5,
              text: {
                value: originalText,
                delimiter: "",
                padSpace: true,
                scrambleText: {
                    text: originalText,
                    chars: "DEVUP01!@#$<>?{}",
                    revealDelay: 0.1,
                    speed: 0.3,
                    tweenLength: false
                }
              },
              ease: "none"
            });
          }
        });
    }, 2000); // Start scrambling as the curtain lifts
  });
</script>

